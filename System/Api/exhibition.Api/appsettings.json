{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Main": {
    "MainUrl": "http://localhost"
  },
  "Identity": {
    "Url": "http://localhost:10001"
  },
  "Swagger": {
    "Enabled": true,
    "OAuthClientId": "",
    "OAuthClientSecret": ""
  },
  "ApiSpecial": {
    "HelloMessage": "Special Api"
  },
  "Database": {
    "Type": "PostgreSQL",
    "ConnectionString": "Server=localhost;Port=25432;Database=exhibitions;User Id=postgres;Password=Passw0rd"
  }
}
